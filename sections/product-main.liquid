<section class="main-product" style="background-image: url({{ section.settings.image | img_url: '740x500' }});">
   <div class="main-product__inner">
      <div class="main-product__title">{{ section.settings.heading }}</div>
      <div class="main-product__prices">
         <span class="main-product__price">{{ section.settings.price | money }}</span>
         <span class="main-product__oldprice">{{ section.settings.oldprice | money }}</span>
      </div>
      {% if section.settings.link != blank %}<a href="{{ section.settings.link }}" class="button button-primary">Start Shopping</a>{% endif %}
   </div>
</section>
{% schema %}
{
   "name": "Deal of the day",
   "max_blocks": 1,
   "settings": [
	{
      "type": "image_picker",
      "id": "image",
      "label": "Collection image",
	   "info": "741x520px"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "price",
      "label": "price"
    },
    {
      "type": "text",
      "id": "oldprice",
      "label": "old price"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "button text"
    },
    {
    "type": "url",
    "id": "link",
    "label": "URL"
    }
   ],
   "blocks": [
      {
         "type": "deal",
         "name": "deal product",
         "settings": [
            {
               "type": "product",
               "id": "product_deal",
               "label": "Product"
            },
            {
              "type": "checkbox",
              "id": "custom_image",
              "label": "Set custom image?",
              "default": true
            },
            {
              "type": "image_picker",
              "id": "product_image",
              "label": "Product image",
	           "info": "741x520px"
            },
            {
               "type": "text",
               "id": "expiry_deal",
               "label": "Expiry",
               "info": "(yyyy,mm,dd)"
            }
         ]
      }
   ],
   "presets": [
      {
         "name": "Deals section",
         "category": "Collection",
         "blocks": [
            {
               "type": "deal"
            },
            {
               "type": "deal"
            }
         ]
      }
   ]
}
{% endschema %}
